# Troca o foco entre as janelas
super + {Tab,Left,Right}
	dwmc focusstack {+,-,+}1

# Muda o tamanho da janela
super + shift + {Left,Right}
	dwmc setmfact {-,+}0.05

# Muda o tamanho da janela
super + shift + {Down,Up}
	dwmc setcfact {-,+}0.20

# Alterna entre janela flutuante
super + t
	dwmc togglefloating

# Fecha uma janela
super + shift + backslash
	dwmc killclient

# Controla as tags
super + {_,ctrl +}{_,shift +} {1-9}
	dwmc {_,toggle}{viewex,tagex} {0-8}

# Ativa/Desativa o scratchpad do st
super + backslash
    dwmc togglescratch 0

# Troca janela mestre pela selecionada
super + Return
    dwmc zoom

# Troca entre layouts
super + Escape
    dwmc layoutscroll +1

# Ncmpcpp
super + a
    st -c ncmpcpp -e ncmpcpp

# Pulsemixer
super + shift + a
    st -c pulsemixer -e pulsemixer

# Pausa musica
super + space
    mpc toggle

# Musica anterior 
super + shift + comma
    mpc prev && tocando

# Proxima musica
super + shift + period
    mpc next && tocando

# Abaixar o volume
super + comma
    amixer -q set Master 10%-

# Aumentar o volume
super + period
    amixer -q set Master 10%+

# St
super + shift + Return
    st -c stscratchpad

# Menu
Menu;Menu
    dmenu_menu

# Menu do systema
Menu;Escape
    dmenu_sys

# Qutebrowser
Menu;q
    qutebrowser

# Gimp
Menu;g
    gimp

# Galculator
Menu;c
    galculator

# Telegram
Menu;T
    telegram-desktop

# Abre/Fecha fluxgui
Menu;f
    killall fluxgui || fluxgui

# Transmission
Menu;t
    transmission-gtk

# Discord
Menu;d
    discord

# Kill
Menu;k
    dmenu_kill

# Abre/Fecha o picom
Menu;p
    killall picom || picom

# Le o arquivo de configuração do sxhkd e gera uma lista de teclas
Menu;slash
    sxhkd_atalhos
