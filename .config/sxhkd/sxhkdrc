# Fecha janela
super + backslash
	bspc node -c

# Troca janela selecionada pela maior janela
super + Return
	bspc node -s biggest.window

# Troca entre layout monocle e tiled
super + Escape
	bspc desktop -l next

# Troca o foco para a janela anterior
super + Left
	bspc node -f prev.local.!hidden.window

# Troca o foco para a proxima janela
super + Right
	bspc node -f next.local.!hidden.window

# Alterna entre ou muda janela para um desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Preseleciona uma direção
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# Cancela seleção
super + space
	bspc node -p cancel

# Expande nodo em uma direção
super + shift + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contrai um nodo em uma direção
super + alt + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Alterna entre janela flutuante
super + t
    bspc node -t \~floating

# Alterna tela cheia
super + f
	bspc node -t \~fullscreen

# Menus
Menu;Menu
    dmenu_menu

# Menu do systema
Menu;Escape
    dmenu_sys

# Dmenu_musica
super + a
    dmenu_musica

# Ncmpcpp
Menu;M
    st -c ncmpcpp -e ncmpcpp

# Pausa musica
super + shift + a
    mpc toggle

# Musica anterior 
super + shift + comma
    mpc prev && notify-send "$(mpc current)"

# Proxima musica
super + shift + period
    mpc next && notify-send "$(mpc current)"

# Abaixar o volume
super + comma
    amixer -q set Master 10%-

# Aumentar o volume
super + period
    amixer -q set Master 10%+

# St
super + shift + Return
	st -c st_scratchpad

# St_scratchpad
shift + Menu
    st_scratchpad

# qutebrowser
Menu;Q
    qutebrowser

# Ranger
Menu;R
    st -e ranger

# Gimp
Menu;G
    gimp

# Galculator
Menu;C
    galculator

# Telegram
Menu;T
    telegram-desktop

# Abre/Fecha fluxgui
Menu;F
    killall fluxgui || fluxgui

# Transmission
Menu;super + t
    transmission-gtk

# Discord
Menu;D
    discord

# Kill
Menu;K
    dmenu_kill

# Abre/Fecha o picom
Menu;P
    killall picom || picom

