#### HERBSTLUFTWM ####
# fecha janela
super + q
    herbstclient close

# alterna tela cheia
super + f
    herbstclient fullscreen

# alterna janela flutuante
super + w
    herbstclient attr clients.focus.floating toggle

# alterna entre as janelas
super + Tab
    herbstclient cycle_all +1
super + alt + period
    herbstclient cycle_all +1

# alterna entre as janelas e tags
super + {Up,Down,Left,Right}
    herbstclient focus {up || herbstclient use_index +1,\
                        down || herbstclient use_index -1,\
                        left || herbstclient use_index -1,\
                        right || herbstclient use_index +1}
super + {k,j,h,l}
    herbstclient focus {up || herbstclient use_index +1,\
                        down || herbstclient use_index -1,\
                        left || herbstclient use_index -1,\
                        right || herbstclient use_index +1}

# troca as janelas de posição
super + shift + {Up,Down,Left,Right}
    herbstclient shift {up,down,left,right}
super + shift + {k,j,h,l}
    herbstclient shift {up,down,left,right}

# muda janela de tag e a segue
super + alt + {Up,Down,Left,Right}
    herbstclient {move_index +1 && herbstclient use_index +1,\
    move_index -1 && herbstclient use_index -1,\
    move_index -1 && herbstclient use_index -1,\
    move_index +1 && herbstclient use_index +1}
super + alt + {k,j,h,l}
    herbstclient {move_index +1 && herbstclient use_index +1,\
    move_index -1 && herbstclient use_index -1,\
    move_index -1 && herbstclient use_index -1,\
    move_index +1 && herbstclient use_index +1}

# cria uma divisória
ctrl + shift + {Up,Down,Left,Right}
    herbstclient split {top,bottom,left,right}
ctrl + shift + {k,j,h,l}
    herbstclient split {top,bottom,left,right}

# remove divisória
super + shift + q
    herbstclient remove

# muda o tamanho de frames
ctrl + super + {Up,Down,Left,Right}
    herbstclient resize {up +0.05,down +0.05,left +0.05,right +0.05}
ctrl + super + {k,j,h,l}
    herbstclient resize {up +0.05,down +0.05,left +0.05,right +0.05}

# troca entre layouts pulando layouts que não mudam janelas de posição
super + Escape
    herbstclient or , and . compare tags.focus.curframe_wcount = 2                   \
                     . cycle_layout +1 vertical horizontal max vertical grid    \
               , cycle_layout +1
super + alt + comma
    herbstclient or , and . compare tags.focus.curframe_wcount = 2                   \
                     . cycle_layout +1 vertical horizontal max vertical grid    \
               , cycle_layout +1

# ativa/desativa a barra enquando super é segurado
Super_L + any
    polybar-msg cmd toggle
~@Super_L + any
    polybar-msg cmd toggle
Super_R + any
    polybar-msg cmd toggle
~@Super_R + any
    polybar-msg cmd toggle

# ativa/desativa a barra
super + b
    polybar-msg cmd toggle

# reinicia a barra
Menu;b
    polybar-msg cmd restart

#### INDENPENDENTE ####
# Terminal #
# st
super + shift + Return
    st & herbstclient use 2
# abre e fecha scratchpads
super + backslash
    st_scratchpad

# Musica #
# pausa/toca musica
super + space
    playerctl play-pause || mpc toggle
# anterior/proxima musica
super + shift + {comma, period}
    mpc {prev,next} && musica notificar
# abaixar/aumentar o volume
super + {comma, period}
    amixer -q set Master 5%{-,+,-,+}
# ncmpcpp/pulsemixer
super + {_,shift} + a
    st -g 120x30 -c {ncmpcpp -n ncmpcpp -e ncmpcpp,pulsemixer -n pulsemixer -e pulsemixer}

# Dmenus #
# dmenu_run
Menu;Menu
    dmenu_run
# dmenu_sys
Menu;Escape
    dmenu_sys
# dmenu_wifi
Menu;w
    dmenu_wifi
# dmenu_edit
Menu;e
    dmenu_edit && herbstclient use 2
# dmenu_emoji
Menu;E
    dmenu_emoji
# dmenu_mont
Menu;m
    dmenu_mont
# dmenu_sxhkd
Menu;slash
    dmenu_sxhkd
# dmenu_shhistory
Menu;h
    dmenu_shhistory
# passmenu
Menu;p
    passmenu --type
# dmenu_clip
Menu;c
    dmenu_clip
# dmenu_qutebrowser
Menu;q
    dmenu_qutebrowser ~/code/shell/dmenuscripts/listas/favoritos.yaml && herbstclient use 1
# dmenu_aliases
Menu;A
    dmenu_aliases
# dmenu_xephyr
Menu;x
    dmenu_xephyr && herbstclient use 7
# dmenu_print
Print
    dmenu_print

# Outros #
# htop
Menu;H
    st -g 120x30 -c htop -n htop -e htop
# picom
Menu;P
    killall picom || picom
# fluxgui
Menu;F
    killall fluxgui || fluxgui
# calculadora
Menu;C
    galculator
# transmission
Menu;t
    transmission-gtk
# anotações
Menu;a
    nvim ~/documentos/anotações.md && herbstclient use 2
