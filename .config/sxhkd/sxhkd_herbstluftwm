#### HERBSTLUFTWM ####
# fecha janela
super + q
    herbstclient close

# alterna tela cheia
super + f
    hlwm_control estado telacheia

# alterna janela flutuante
super + w
    hlwm_control estado flutuante

# alterna entre as janelas
super + Tab
    herbstclient cycle_all +1
super + alt + period
    herbstclient cycle_all +1

# alterna entre as janelas e tags
super + {Up,Down,Left,Right}
    herbstclient focus {up,down,\
                        left || herbstclient use_index -1,\
                        right || herbstclient use_index +1}
super + {k,j,h,l}
    herbstclient focus {up,down,\
                        left || herbstclient use_index -1,\
                        right || herbstclient use_index +1}

# troca as janelas de posição
super + shift + {Up,Down,Left,Right}
    herbstclient shift {up,down,left,right}
super + shift + {k,j,h,l}
    herbstclient shift {up,down,left,right}

# muda janela de tag e a segue
super + alt + {Left,Right}
    herbstclient {move_index -1 && herbstclient use_index -1,\
    move_index +1 && herbstclient use_index +1}
super + alt + {h,l}
    herbstclient {move_index -1 && herbstclient use_index -1,\
    move_index +1 && herbstclient use_index +1}

# cria uma divisória
super + ctrl + shift + {Up,Down,Left,Right}
    herbstclient split {top,bottom,left,right}
super + ctrl + shift + {k,j,h,l}
    herbstclient split {top,bottom,left,right}

# remove divisória
super + shift + q
    herbstclient remove

# muda o tamanho de frames
ctrl + super + {Up,Down,Left,Right}
    herbstclient resize {up +0.05,down +0.05,left +0.05,right +0.05}
ctrl + super + {k,j,h,l}
    herbstclient resize {up +0.05,down +0.05,left +0.05,right +0.05}

# troca entre layouts pulando layouts que não mudam janelas de posição
super + Escape
    herbstclient or , and . compare tags.focus.curframe_wcount = 2                   \
                     . cycle_layout +1 vertical horizontal max vertical grid    \
               , cycle_layout +1
super + alt + comma
    herbstclient or , and . compare tags.focus.curframe_wcount = 2                   \
                     . cycle_layout +1 vertical horizontal max vertical grid    \
               , cycle_layout +1

# ativa/desativa a barra enquando super é segurado
Super_L + any
    polybar-msg cmd toggle
~@Super_L + any
    polybar-msg cmd toggle
Super_R + any
    polybar-msg cmd toggle
~@Super_R + any
    polybar-msg cmd toggle

# ativa/desativa a barra
super + b
    polybar-msg cmd toggle

# reinicia a barra
Menu;b
    polybar-msg cmd restart

#### INDENPENDENTE ####
# Terminal #
# st
super + shift + Return
    st
# abre e fecha scratchpads
super + backslash
    st_scratchpad

# Musica #
# pausa/toca musica
super + space
    playerctl play-pause || mpc toggle
# anterior/proxima musica
super + shift + {comma, period}
    mpc {prev,next} && musica notificar
# abaixar/aumentar o volume
super + {comma, period}
    amixer -q set Master 5%{-,+}
# ncmpcpp/pulsemixer
super + {_,shift} + a
    st -c {ncmpcpp -n ncmpcpp -e ncmpcpp,pulsemixer -n pulsemixer -e pulsemixer}

# Menus #
# fzf_emoji
Menu;E
    st -c fzf -n fzf -e fzf_emojis
# fzf_man
Menu;m
    st -e fzf_man
# fzf_sxhkd
Menu;slash
    st -c fzf -n fzf -e fzf_sxhkd
# fzf_clip
Menu;c
    st -c fzf -n fzf -e fzf_clip
# passmenu
Menu;p
    passmenu --type
# dmenu_run
Menu;Menu
    dmenu_run
# dmenu_sys
{Menu;Escape,XF86Launch2}
    dmenu_sys
# dmenu_mont
Menu;M
    dmenu_mont
# dmenu_wifi
Menu;w
    dmenu_wifi
# dmenu_edit
Menu;e
    dmenu_edit
# dmenu_qutebrowser
Menu;q
    dmenu_qutebrowser ~/code/shell/listas/favoritos.yaml
# dmenu_xephyr
Menu;x
    dmenu_xephyr
# dmenu_print
Print
    dmenu_print

# Outros #
# htop
Menu;h
    st -c htop -n htop -e htop
# picom
Menu;P
    pkill picom || picom
# sct
Menu;{f,F}
    {sct,sct 2000}
# calculadora
Menu;C
    galculator
# transmission
Menu;t
    transmission-qt
# anotações
Menu;a
    $VISUAL ~/documentos/anotações.md
