#### INDENPENDENTE ####
# Terminal #
super + shift + Return
    term_open
# abre e fecha scratchpads
super + backslash
    term_scratchpad

# Musica #
# pausa/toca musica
super + space
    playerctl play-pause || mpc toggle
# anterior/proxima musica
super + shift + {comma, period}
    mpc {prev,next} && musica notificar
# abaixar/aumentar o volume
super + {comma, period}
    amixer -q set Master 5%{-,+}
# ncmpcpp/pulsemixer
super + {_,shift} + a
    term_open {ncmpcpp ncmpcpp ncmpcpp,pulsemixer pulsemixer pulsemixer}

# Menus #
# fzf_emoji
Menu;E
    term_open fzf fzf fzf_emojis
# fzf_sxhkd
Menu;slash
    term_open fzf fzf fzf_sxhkd
# fzf_clip
Menu;c
    term_open fzf fzf fzf_clip
# passmenu
Menu;p
    passmenu --type
# dmenu_run
Menu;Menu
    dmenu_run
# dmenu_sys
{Menu;Escape,XF86Launch2}
    dmenu_sys
# dmenu_mont
Menu;m
    dmenu_mont
# dmenu_wifi
Menu;w
    dmenu_wifi
# dmenu_edit
Menu;e
    dmenu_edit
# dmenu_browser
Menu;q
    dmenu_browser
# dmenu_xephyr
Menu;x
    dmenu_xephyr
# dmenu_print
Print
    dmenu_print

# Outros #
# htop
Menu;h
    term_open htop htop htop
# picom
Menu;P
    pkill picom || picom
# sct
Menu;{f,F}
    {sct,sct 2000}
# calculadora
Menu;C
    galculator
# transmission
Menu;t
    transmission-qt
# anotações
Menu;a
    $VISUAL ~/documentos/anotações.md
