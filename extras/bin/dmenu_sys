#!/bin/sh

case "$(printf "Bloquear\\nSair do DWM\\nReiniciar o DWM\\nReiniciar\\nDesligar" | dmenu -l 35 -c -p "Systema")" in
	"Bloquear") slock ;;
	"Sair do DWM") kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	"Reiniciar o DWM") kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	"Reiniciar") systemctl reboot ;;
	"Desligar") systemctl poweroff ;;
esac
